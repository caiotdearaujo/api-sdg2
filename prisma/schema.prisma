generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Editor {
  id        String     @id @unique @db.Char(32)
  username  String     @unique @db.VarChar(64)
  password  String     @db.Char(60)
  questions Question[]
}

model Question {
  id             Int      @id @default(autoincrement())
  title          String   @db.VarChar(1024)
  editor         Editor   @relation(fields: [editorUsername], references: [username])
  editorUsername String   @db.Char(64)
  answers        Answer[]
  level          Int
  time           Int
}

model Answer {
  id         Int      @id @default(autoincrement())
  content    String   @db.VarChar(1024)
  question   Question @relation(fields: [questionId], references: [id])
  questionId Int
  correct    Boolean
}

model Ranking {
  id        Int    @id @default(autoincrement())
  name      String
  turma     String
  pontuacao Int
}
